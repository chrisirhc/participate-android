<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!-- Currently Speaking -->
	<TextView android:layout_width="wrap_content" android:layout_gravity="center"
		android:layout_height="wrap_content" android:hint="-"
		android:id="@+id/textbox" android:textSize="30dip" />

	<!--  Rating -->
  	<ImageView android:id="@+id/rateImg" android:layout_width="wrap_content" android:layout_height="wrap_content"
  	android:visibility="invisible"></ImageView>
  	
  	<!--  the drawer -->
<FrameLayout
	android:id="@+id/theDrawerBackFrame"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:layout_gravity="bottom"
    android:layout_marginBottom="30dip"
    android:layout_marginRight="60dip"
    android:background="@drawable/arrow"
    >
	<TextView android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:id="@+id/theDrawerBack"/>
</FrameLayout>
   <SlidingDrawer
     android:id="@+id/theDrawer"
     android:layout_width="fill_parent"
     android:layout_height="60dip"
     android:orientation="horizontal"
     android:allowSingleTap="false"

     android:handle="@+id/theDrawerHandle"
     android:content="@+id/theDrawerContent"
     android:layout_gravity="bottom"
     android:layout_marginBottom="30dip"
     >

     <ImageView
         android:id="@id/theDrawerHandle"
         android:layout_width="60dip"
         android:layout_height="60dip" android:src="@drawable/drawer"
         />

	<FrameLayout
    android:id="@id/theDrawerContent"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="#000">
     <TextView
         android:id="@+id/theDrawerText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:layout_gravity="center"/>
	</FrameLayout>
 </SlidingDrawer> 
</FrameLayout> 