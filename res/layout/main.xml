<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!-- Current message -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/hello"
		android:id="@+id/textbox" android:textSize="30dip" />

	<!-- Who is the current user? -->
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="You are:"
		android:textColor="#999"></TextView>
	<TextView android:hint="-" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/userId"
		android:layout_gravity="center" android:textColor="#fff"
		android:textSize="30dip"></TextView>

	<!--  Note the current class -->
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="You are currently in:"
		android:textColor="#999"></TextView>
	<TextView android:hint="-" android:textSize="30dip" android:textColor="#fff"
		android:layout_gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/classTitle"></TextView>

	<!--  Toggle the current user's participation session -->
	<Button android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/togglePsessionButton"
		android:text="Start" android:visibility="invisible"></Button>
</LinearLayout>
